
$oGreen = #549235
$oGreens = #559235
$oOrange = #fc9b16
$bbe5 = 1px solid #e5e5e5
.oGreen
    color $oGreen
.oGreens
    color $oGreens
.oOrange
    color $oOrange
.orderList
    padding 0
    li
        background #fff
        margin 10px -15px 0
        padding 0 10px
        list-style-type none
        margin-bottom 15px
    .orderlist_hd
        border-bottom $bbe5
        padding 10px
        margin 0 -10px

.orderlist_bd
    li
        section
            overflow hidden
        section:nth-child(odd)
            padding 0 10px
            margin 0 -10px
            background #e7e7e7
.orderlist_zi
    padding 0
    li
        list-style-type none
        margin 10px 0 0
        padding 0 10px
        background #f5f5f5
        header
            padding 10px 0
            border-bottom $bbe5
        section
            h4
                margin-top 15px
        footer
            padding 10px 0
            border-top $bbe5
            p
                margin 0
.pay_type
    margin 10px -10px 0
    padding 10px
    border-top $bbe5
.pay_time
    margin 10px -10px 0
    padding 15px 10px 
    position relative
    border-top $bbe5
    .pay_btn
        text-align center
        button
            width 48%
.weixin_btn
    color #fff
    background #559235
.orderinfo
    margin-bottom 10px
    p
        margin 0
