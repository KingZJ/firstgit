.login_bg
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  background url(/assets/images/login_bg.jpg)

.logo
  top 25%
  left 50%
  margin-top -90px
  margin-left -90px
  width 180px
  height 180px
  border-radius 90px
  color #ff6601
  padding 45px 0
  text-align center
  box-shadow 0 0 5px #999
  position absolute
  background url(/assets/images/logo.png) no-repeat center center #fff
  background-size 44%
  h3
    font-size 32px
    line-height 32px
    padding 0
  h5
    font-size 14px
    line-height 14px
    padding 0

.slogan
  color white
  position absolute
  top 25%
  margin: 100px -15px
  text-align center
  width 100%
  h5
    font-size 14px

.login-form
  position absolute
  display:block
  background:none !important
  bottom 0
  left 5%
  width 90%
  margin 0 -15px 15px 0
  height auto
  padding 15px
  input
    box-shadow none
  .alert
    margin-bottom 0

