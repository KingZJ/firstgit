/*mobile style*/
.navbar-inverse .navbar-brand{
    position:relative;
    z-index:2;
    font-size:18px;
}
.dropdown-toggle{
    text-align:right;
}
@media (max-width: 767px){
    .mobile_menu {
        display:block;
    }
    .dropdown >a{
        margin-right:-15px;
    }
    .mobile_menu .nav li:hover{
        background:#428bca;
    }
    .mobile_menu .dropdown-menu a{
        display:block;
    }
    .sidebar{
        display:none;
    }
    .mobile_menu ul{
        padding-left:25px;
    }
    .mobile_menu ul li{
        list-style-type:none;
        line-height:2;
        margin-bottom:5px;
    }
    .mobile_menu ul li a{
        display:block;
        padding-left:10px;
    }
    .width_change .col-xs-offset-2{
        margin-left:0;
    }
    .width_change .col-xs-10{
        width:100%;
    }
}
@media (min-width:768px){
    .mobile_menu{
        display:none;
    }
}
@media (max-width:992px){
    .login_b{
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        align-items: center;
        display: flex;
        padding: 15px;
        bottom: 0;
        right: 0;
    }
}
